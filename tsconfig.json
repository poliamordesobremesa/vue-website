{
	"compilerOptions": {
		"strict": true,
		"module": "ES2020",
		"moduleResolution": "Node",
		"target": "ES2020",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"#/components/*": ["./components/*"],
			"#/pages/*": ["./pages/*"],
			"#/model/*": ["./model/*"],
			"#/renderer/*": ["./renderer/*"],
			"#/assets/*": ["./assets/"]
		}
	},
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
