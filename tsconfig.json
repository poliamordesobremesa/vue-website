{
	"compilerOptions": {
		"strict": true,
		"module": "ES2020",
		"moduleResolution": "Node",
		"target": "ES2020",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"#/*": ["./*"],
			"#/page/*": ["./pages/*/index.ts"],
			"#/component/*": ["./components/*/index.ts"]
		}
	},
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
